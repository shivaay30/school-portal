<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Dashboard - <%= user.name %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/css/styles.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/dashboard">School Portal</a>
        <div class="d-flex align-items-center">
          <span class="navbar-text me-3">
            <%= user.name %> (<%= user.role %>)
          </span>
          <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
        </div>
      </div>
    </nav>

    <main class="container my-4">
      <% if (user.role === 'student' || user.role === 'parent') { %>
      <div class="row mb-4">
        <div class="col-md-4">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title mb-3">Student Info</h5>
              <% if (data.student) { %>
              <p class="mb-1"><strong>Name:</strong> <%= data.student.name %></p>
              <p class="mb-0"><strong>Class:</strong> <%= data.student.class %></p>
              <% } else { %>
              <p class="text-muted mb-0">No student information found.</p>
              <% } %>
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title mb-3">Quick Overview</h5>
              <p class="mb-1">
                <strong>Total Subjects:</strong> <%= (data.results || []).length %>
              </p>
              <p class="mb-1">
                <strong>Recent Attendance Records:</strong>
                <%= (data.attendance || []).length %>
              </p>
              <p class="mb-0">
                <strong>Upcoming Homework:</strong> <%= (data.homework || []).length %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="row g-4">
        <div class="col-md-6">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title mb-3">Results</h5>
              <% if (data.results && data.results.length) { %>
              <div class="table-responsive">
                <table class="table table-sm align-middle">
                  <thead>
                    <tr>
                      <th>Subject</th>
                      <th>Score</th>
                      <th>Term</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% data.results.forEach(r => { %>
                    <tr>
                      <td><%= r.subject %></td>
                      <td><%= r.score %> / <%= r.max_score %></td>
                      <td><%= r.term %></td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
              <p class="text-muted mb-0">No results available yet.</p>
              <% } %>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title mb-3">Recent Attendance</h5>
              <% if (data.attendance && data.attendance.length) { %>
              <div class="table-responsive">
                <table class="table table-sm align-middle">
                  <thead>
                    <tr>
                      <th>Date</th>
                      <th>Status</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% data.attendance.forEach(a => { %>
                    <tr>
                      <td><%= a.date %></td>
                      <td><span class="badge attendance-<%= a.status.toLowerCase() %>"><%= a.status %></span></td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
              <p class="text-muted mb-0">No attendance data yet.</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-12">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title mb-3">Homework</h5>
              <% if (data.homework && data.homework.length) { %>
              <div class="table-responsive">
                <table class="table table-sm align-middle">
                  <thead>
                    <tr>
                      <th>Subject</th>
                      <th>Title</th>
                      <th>Due Date</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% data.homework.forEach(h => { %>
                    <tr>
                      <td><%= h.subject %></td>
                      <td><%= h.title %></td>
                      <td><%= h.due_date %></td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
              <p class="text-muted mb-0">No homework assigned.</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <% } else if (user.role === 'teacher') { %>

      <div class="row g-4">
        <div class="col-md-6">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title mb-3">Students</h5>
              <% if (data.students && data.students.length) { %>
              <div class="table-responsive">
                <table class="table table-sm align-middle">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Class</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% data.students.forEach(s => { %>
                    <tr>
                      <td><%= s.name %></td>
                      <td><%= s.class %></td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
              <p class="text-muted mb-0">No students found.</p>
              <% } %>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title mb-3">Homework Overview</h5>
              <% if (data.homework && data.homework.length) { %>
              <div class="table-responsive">
                <table class="table table-sm align-middle">
                  <thead>
                    <tr>
                      <th>Class</th>
                      <th>Subject</th>
                      <th>Title</th>
                      <th>Due Date</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% data.homework.forEach(h => { %>
                    <tr>
                      <td><%= h.class %></td>
                      <td><%= h.subject %></td>
                      <td><%= h.title %></td>
                      <td><%= h.due_date %></td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
              <p class="text-muted mb-0">No homework assigned yet.</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <% } %>
    </main>
  </body>
</html>

